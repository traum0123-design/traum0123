# Rate limit backend (auto/memory/redis)
ADMIN_RATE_LIMIT_BACKEND=auto
# ADMIN_RATE_LIMIT_REDIS_URL=redis://127.0.0.1:6379/0
# On Redis error: open(allow) | closed(block) | memory(fallback)
ADMIN_RATE_LIMIT_REDIS_POLICY=open

# Migration control
PAYROLL_AUTO_APPLY_DDL=1
PAYROLL_ENFORCE_ALEMBIC=0

# Rate limit backend (production에선 redis 권장)
# ADMIN_RATE_LIMIT_BACKEND=redis
# ADMIN_RATE_LIMIT_REDIS_URL=redis://localhost:6379/0

# Cookies over HTTPS only
# COOKIE_SECURE=1

# API and server runtime
# Comma-separated list of allowed CORS origins for API
API_CORS_ORIGINS=http://localhost:8000,http://127.0.0.1:8000
# Uvicorn log level: debug, info, warning, error, critical
UVICORN_LOG_LEVEL=info

# Observability
# Enable JSON logs to stdout (optional)
JSON_LOGS=0
# Sentry DSN to enable error reporting (optional)
# SENTRY_DSN=your-dsn-here
# SENTRY_TRACES_SAMPLE_RATE=0.0
# SENTRY_ENV=dev

# Locks / rate limiter (optional Redis)
# LOCK_REDIS_URL=redis://127.0.0.1:6379/0
